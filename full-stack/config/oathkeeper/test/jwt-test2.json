[
    {
        "id": "test",
        "upstream": {
          "url": "https://tw.yahoo.com/"
        },
        "match": {
          "url": "http://<[^/]+>/oathkeeper",
          "methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "PATCH"
          ]
        },
        "authenticators": [
          {
            "handler": "keto_engine_acp_ory",
            "config": {
              "required_action": "blog:read",
              "required_resource": "blog:posts:1",
              "flavor": "exact"
            }
          }
        ],
        "authorizer": {
          "handler": "allow"
        },
        "credentials_issuer": {
            "handler": "id_token",
            "config":{
                "aud" : [ "example-auth-code","consumer-app"]
            }
        }
      }
]