[
    {
        "id": "test",
        "upstream": {
          "url": "https://tw.yahoo.com/"
        },
        "match": {
          "url": "http://<[^/]+>/oathkeeper",
          "methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "PATCH"
          ]
        },
        "authenticators": [
          {
            "handler": "jwt",
            "config": {
              "required_scope": [
                "offline",
                "openid",
                "articles.read"
              ],
              "target_audience":["consumer-app"],
              "trusted_issuers":["http://hydra:4444"]
            }
          }
        ],
        "authorizer": {
          "handler": "allow"
        },
        "credentials_issuer": {
          "handler": "noop"
        },
        "mutator":
        {
            "handler":"noop"
        }
      }
]